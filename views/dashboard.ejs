
<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>ðŸ“‹ My Job Applications</h1>
  <a href="/add">+ Add Job</a> | <a href="/logout">Logout</a>
  <ul>
    <% jobs.forEach(job => { %>
      <li class="status-<%= job.status %>">
        <strong><%= job.title %></strong> at <%= job.company %>
        <br>
        <em>Status: <%= job.status %></em>
        <form action="/delete/<%= job._id %>" method="POST" style="margin-top: 10px;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
